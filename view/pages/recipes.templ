package pages

import "github.com/andrei0427/lifeofmarrow/view/partial"

templ Recipes(props []partial.RecipeEntity) {
	<div class="pb-16">
		<div
			class="inline-grid border bg-emerald-600 gap-[1px] py-[1px] grid-cols-1 lg:grid-cols-2 xl:grid-cols-3"
		>
			for i, r := range props {
				@partial.RecipeTile(i, r)
			}
		</div>
	</div>
}
